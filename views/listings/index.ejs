<%- layout('layouts/boilerplate') %>

<body>
  <div class="container py-4">
    <div class="row">
      <% allListings.forEach(listing => { %>
        <div class="col-12 col-sm-6 col-md-4 mb-4 d-flex align-items-stretch">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark w-100">
            <div class="card shadow-sm h-100">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 16rem; object-fit: cover;">
              <div class="card-body">
                <h5 class="card-title"><%= listing.name %></h5>
                <p class="card-text">
                  <strong>Location:</strong> <%= listing.location %>, <%= listing.city %><br>
                  <strong>Contact:</strong> <%= listing.contactNumber %><br>
                  <strong>Room Types:</strong><br>
                  <% if (listing.roomTypes && listing.roomTypes.length > 0) { %>
                    <ul class="mb-0 ps-3">
                      <% listing.roomTypes.forEach(room => { %>
                        <li><%= room.type %> - â‚¹<%= room.pricePerDay %>/day</li>
                      <% }) %>
                    </ul>
                  <% } else { %>
                    Not Available
                  <% } %>
                </p>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</body>
