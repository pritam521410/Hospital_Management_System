<% layout('layouts/boilerplate') -%>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/starability/starability-all.min.css"
/>

<style>
  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }

  .hospital-hero {
    position: relative;
    height: 280px;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    margin-bottom: 40px;
  }

  .hospital-hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hospital-hero-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      transparent 100%
    );
    padding: 40px 30px 30px 30px;
    color: white;
  }

  .hospital-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 10px;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
  }

  .owner-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: 8px 16px;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .info-card {
    background: white;
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
  }

  .info-section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 25px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .info-section-title i {
    color: #667eea;
    font-size: 1.8rem;
  }

  .info-row {
    display: flex;
    align-items: flex-start;
    gap: 15px;
    margin-bottom: 18px;
    padding: 12px;
    background: #f8f9fa;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .info-row:hover {
    background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
    transform: translateX(5px);
  }

  .info-row i {
    width: 25px;
    color: #667eea;
    font-size: 1.2rem;
    margin-top: 3px;
  }

  .info-label {
    font-weight: 700;
    color: #4a5568;
    min-width: 140px;
  }

  .info-value {
    color: #2d3748;
    flex: 1;
  }

  /* Room Cards */
  .room-card {
    background: white;
    border-radius: 15px;
    padding: 25px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.4s ease;
    height: 100%;
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
  }

  .room-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 5px;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .room-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(102, 126, 234, 0.2);
    border-color: #667eea;
  }

  .room-type-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #667eea;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .room-detail {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 12px;
    font-size: 0.95rem;
  }

  .room-detail i {
    width: 25px;
    color: #667eea;
  }

  .room-detail strong {
    color: #4a5568;
    min-width: 100px;
  }

  .price-tag {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 12px 20px;
    border-radius: 12px;
    text-align: center;
    margin-top: 15px;
    font-weight: 700;
    font-size: 1.3rem;
  }

  .availability-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .available {
    background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    color: white;
  }

  .not-available {
    background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    color: white;
  }

  /* Owner Actions */
  .owner-actions {
    background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
    border-radius: 15px;
    padding: 20px;
    margin-bottom: 30px;
    border: 2px solid #667eea30;
  }

  .owner-actions-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .action-btn {
    padding: 12px 30px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .edit-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .edit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    color: white;
  }

  .delete-btn {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: white;
  }

  .delete-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(245, 87, 108, 0.4);
  }

  /* Review Section */
  .review-form {
    background: white;
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .review-card {
    background: white;
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    height: 100%;
  }

  .review-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .reviewer-info {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 15px;
  }

  .reviewer-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #667eea;
  }

  .reviewer-name {
    font-weight: 700;
    color: #2d3748;
    margin: 0;
  }

  .rating-stars {
    color: #fbbf24;
    font-size: 1.1rem;
  }

  .book-now-btn {
    display: block;
    width: 100%;
    background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    color: white;
    text-align: center;
    padding: 15px;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    margin-top: 15px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .book-now-btn:hover {
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(67, 233, 123, 0.4);
  }

  .container {
    max-width: 1200px;
  }

  @media (max-width: 768px) {
    .hospital-title {
      font-size: 1.8rem;
    }

    .hospital-hero {
      height: 240px;
    }

    .action-btn {
      padding: 10px 20px;
      font-size: 0.9rem;
    }
  }

  /* Mobile phones - even smaller hero */
  @media (max-width: 576px) {
    .hospital-hero {
      height: 200px;
      border-radius: 15px;
      margin-bottom: 30px;
    }

    .hospital-title {
      font-size: 1.5rem;
    }

    .hospital-hero-overlay {
      padding: 25px 20px 20px 20px;
    }

    .owner-badge {
      font-size: 0.8rem;
      padding: 6px 12px;
    }
  }
</style>

<div class="container mt-4 mb-5">
  <!-- Hospital Hero -->
  <div class="hospital-hero">
    <img src="<%= listing.image.url %>" alt="<%= listing.name %>" />
    <div class="hospital-hero-overlay">
      <h1 class="hospital-title">
        <i class="fas fa-hospital me-3"></i>
        <%= listing.name %>
      </h1>
      <div class="owner-badge">
        <i class="fas fa-user-shield"></i>
        Owner: <%= listing.owner.username %>
      </div>
    </div>
  </div>

  <!-- Owner Actions (Only for Owner) -->
  <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
  <div class="owner-actions">
    <h3 class="owner-actions-title">
      <i class="fas fa-cog"></i>
      Manage Your Listing
    </h3>
    <div class="d-flex flex-column flex-md-row gap-3">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="action-btn edit-btn flex-fill"
      >
        <i class="fas fa-edit"></i>
        Edit Listing
      </a>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=DELETE"
        onsubmit="return confirm('⚠️ Are you sure you want to delete this listing? This action cannot be undone.');"
        class="flex-fill"
      >
        <button type="submit" class="action-btn delete-btn w-100">
          <i class="fas fa-trash-alt"></i>
          Delete Listing
        </button>
      </form>
    </div>
  </div>
  <% } %>

  <!-- Hospital Information -->
  <div class="info-card">
    <h3 class="info-section-title">
      <i class="fas fa-info-circle"></i>
      Hospital Information
    </h3>

    <div class="info-row">
      <i class="fas fa-align-left"></i>
      <div>
        <span class="info-label">Description:</span>
        <p class="info-value mb-0"><%= listing.description %></p>
      </div>
    </div>

    <div class="info-row">
      <i class="fas fa-map-marker-alt"></i>
      <div>
        <span class="info-label">Location:</span>
        <span class="info-value"
          ><%= listing.location %>, <%= listing.city %>, <%= listing.state
          %></span
        >
      </div>
    </div>

    <div class="info-row">
      <i class="fas fa-globe"></i>
      <div>
        <span class="info-label">Country:</span>
        <span class="info-value"><%= listing.country %></span>
      </div>
    </div>

    <div class="info-row">
      <i class="fas fa-phone"></i>
      <div>
        <span class="info-label">Contact Number:</span>
        <span class="info-value"><%= listing.contactNumber %></span>
      </div>
    </div>

    <div class="info-row">
      <i class="fas fa-envelope"></i>
      <div>
        <span class="info-label">Email:</span>
        <span class="info-value"><%= listing.email %></span>
      </div>
    </div>
  </div>

  <!-- Room Types -->
  <div class="info-card">
    <h3 class="info-section-title">
      <i class="fas fa-bed"></i>
      Available Room Types
    </h3>

    <% if (listing.roomTypes.length === 0) { %>
    <p class="text-muted text-center py-4">
      <i class="fas fa-info-circle me-2"></i>
      No room types listed for this hospital.
    </p>
    <% } else { %>
    <div class="row">
      <% listing.roomTypes.forEach(room => { %>
      <div class="col-12 col-lg-6 mb-4">
        <div class="room-card">
          <div class="d-flex justify-content-between align-items-start mb-3">
            <h4 class="room-type-title">
              <i class="fas fa-door-open"></i>
              <%= room.type %>
            </h4>
            <span
              class="availability-badge <%= room.isAvailable ? 'available' : 'not-available' %>"
            >
              <i
                class="fas fa-<%= room.isAvailable ? 'check' : 'times' %>-circle"
              ></i>
              <%= room.isAvailable ? 'Available' : 'Not Available' %>
            </span>
          </div>

          <div class="room-detail">
            <i class="fas fa-bed"></i>
            <div>
              <strong>Bed Count:</strong>
              <span><%= room.bedCount %> beds</span>
            </div>
          </div>

          <div class="room-detail">
            <i class="fas fa-check-circle"></i>
            <div>
              <strong>Facilities:</strong>
              <span><%= room.facilities.join(", ") %></span>
            </div>
          </div>

          <div class="price-tag">
            <i class="fas fa-rupee-sign me-2"></i>₹<%= room.pricePerDay %> / day
          </div>

          <% if(currentUser && room.isAvailable) { %>
          <a
            href="/bookings/new/<%= listing._id %>?roomType=<%= encodeURIComponent(room.type) %>&price=<%= room.pricePerDay %>"
            class="book-now-btn"
          >
            <i class="fas fa-calendar-check me-2"></i>
            Book Now
          </a>
          <% } else if(!currentUser) { %>
          <a
            href="/login"
            class="book-now-btn"
            style="
              background: linear-gradient(135deg, #718096 0%, #4a5568 100%);
            "
          >
            <i class="fas fa-sign-in-alt me-2"></i>
            Login to Book
          </a>
          <% } else if(!room.isAvailable) { %>
          <button
            class="book-now-btn"
            disabled
            style="background: #cbd5e0; cursor: not-allowed"
          >
            <i class="fas fa-times-circle me-2"></i>
            Not Available
          </button>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>

  <!-- Hospital Location Map -->
  <div class="info-card">
    <h3 class="info-section-title">
      <i class="fas fa-map-marked-alt"></i>
      Hospital Location
    </h3>
    <div
      style="
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
      "
    >
      <iframe
        style="width: 100%; height: 400px; border: none; display: block"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        src="https://maps.google.com/maps?width=100%&amp;height=400&amp;hl=en&amp;q=<%= encodeURIComponent(listing.location + ', ' + listing.city + ', ' + listing.state) %>&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"
      >
      </iframe>
    </div>
  </div>

  <!-- Reviews Section -->
  <% if(currentUser){ %>
  <div class="info-card">
    <h3 class="info-section-title">
      <i class="fas fa-star"></i>
      Leave a Review
    </h3>
    <form
      method="POST"
      action="/listings/<%= listing._id %>/reviews"
      class="needs-validation"
      novalidate
    >
      <div class="mb-4">
        <label class="form-label d-block fw-bold mb-3">
          <i class="fas fa-star-half-alt me-2"></i>Your Rating
        </label>
        <div class="starability-basic">
          <input
            type="radio"
            id="rate1"
            name="review[rating]"
            value="1"
            required
          />
          <label for="rate1" title="Terrible">1 star</label>
          <input type="radio" id="rate2" name="review[rating]" value="2" />
          <label for="rate2" title="Not good">2 stars</label>
          <input type="radio" id="rate3" name="review[rating]" value="3" />
          <label for="rate3" title="Average">3 stars</label>
          <input type="radio" id="rate4" name="review[rating]" value="4" />
          <label for="rate4" title="Very good">4 stars</label>
          <input type="radio" id="rate5" name="review[rating]" value="5" />
          <label for="rate5" title="Amazing">5 stars</label>
        </div>
      </div>
      <div class="mb-4">
        <label for="comment" class="form-label fw-bold">
          <i class="fas fa-comment-dots me-2"></i>Your Review
        </label>
        <textarea
          class="form-control"
          id="comment"
          name="review[comment]"
          rows="5"
          placeholder="Share your experience with this hospital..."
          required
          minlength="5"
          style="border-radius: 12px; border: 2px solid #e2e8f0; padding: 15px"
        ></textarea>
        <div class="invalid-feedback">
          Please enter a review (at least 5 characters).
        </div>
      </div>
      <div class="text-center">
        <button
          type="submit"
          class="action-btn edit-btn"
          style="
            display: inline-flex;
            min-width: 200px;
            justify-content: center;
          "
        >
          <i class="fas fa-paper-plane"></i>
          Submit Review
        </button>
      </div>
    </form>
  </div>
  <% } %>

  <!-- All Reviews -->
  <div class="info-card">
    <h3 class="info-section-title">
      <i class="fas fa-comments"></i>
      Patient Reviews (<%= listing.reviews.length %>)
    </h3>

    <% if (listing.reviews.length === 0) { %>
    <div class="text-center py-5">
      <i
        class="fas fa-star"
        style="font-size: 3rem; color: #cbd5e0; margin-bottom: 15px"
      ></i>
      <p class="text-muted mb-0">
        No reviews yet. Be the first to share your experience!
      </p>
    </div>
    <% } else { %>
    <div class="row">
      <% listing.reviews.forEach(review => { %>
      <div class="col-12 col-lg-6 mb-4">
        <div class="review-card">
          <div class="reviewer-info">
            <img
              src="<%= review.author.profileImage || 'https://cdn-icons-png.flaticon.com/512/149/149071.png' %>"
              alt="<%= review.author.username %>"
              class="reviewer-avatar"
            />
            <div class="flex-grow-1">
              <h5 class="reviewer-name"><%= review.author.username %></h5>
              <div class="rating-stars">
                <% for (let i = 1; i <= 5; i++) { %> <% if (i <= review.rating)
                { %>
                <i class="fas fa-star"></i>
                <% } else { %>
                <i class="far fa-star" style="color: #cbd5e0"></i>
                <% } %> <% } %>
                <span class="ms-2" style="color: #718096; font-size: 0.9rem"
                  >(<%= review.rating %>/5)</span
                >
              </div>
            </div>
            <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
            <form
              method="POST"
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              onsubmit="return confirm('⚠️ Delete this review?');"
            >
              <button
                type="submit"
                class="btn btn-sm"
                style="
                  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
                  color: white;
                  border: none;
                  border-radius: 8px;
                  padding: 6px 12px;
                "
              >
                <i class="fas fa-trash-alt"></i>
              </button>
            </form>
            <% } %>
          </div>
          <p class="mb-0" style="color: #4a5568; line-height: 1.6">
            <%= review.comment %>
          </p>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  (function () {
    "use strict";
    const forms = document.querySelectorAll(".needs-validation");
    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
