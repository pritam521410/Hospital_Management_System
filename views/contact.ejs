<% layout("/layouts/boilerplate") -%>

<div class="contact-page">
  <!-- Hero Section -->
  <div class="contact-hero">
    <div class="container">
      <div class="hero-content">
        <h1><i class="fas fa-envelope"></i> Get In Touch</h1>
        <p class="lead">We'd love to hear from you. Our team is always here to help.</p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row g-4">
      <!-- Contact Form Section -->
      <div class="col-lg-7">
        <div class="contact-form-card">
          <div class="card-header">
            <h2><i class="fas fa-paper-plane"></i> Send Us a Message</h2>
            <p>Fill out the form below and we'll get back to you as soon as possible</p>
          </div>
          <form action="https://formspree.io/f/manoqoln" method="POST" id="contactForm">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="name"><i class="fas fa-user"></i> Full Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    class="form-control" 
                    placeholder="Enter your full name" 
                    required 
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="email"><i class="fas fa-envelope"></i> Email Address</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-control" 
                    placeholder="your.email@example.com" 
                    required 
                  />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="phone"><i class="fas fa-phone"></i> Phone Number</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    class="form-control" 
                    placeholder="+91 98765 43210" 
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="subject"><i class="fas fa-tag"></i> Subject</label>
                  <select id="subject" name="subject" class="form-control" required>
                    <option value="">Select a subject</option>
                    <option value="general">General Inquiry</option>
                    <option value="appointment">Appointment Request</option>
                    <option value="emergency">Emergency</option>
                    <option value="billing">Billing Question</option>
                    <option value="feedback">Feedback</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="message"><i class="fas fa-comment-alt"></i> Your Message</label>
              <textarea 
                id="message" 
                name="message" 
                class="form-control" 
                rows="6" 
                placeholder="Write your message here..." 
                required
              ></textarea>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">
              <i class="fas fa-paper-plane me-2"></i>Send Message
            </button>
          </form>
        </div>
      </div>

      <!-- Contact Info Section -->
      <div class="col-lg-5">
        <!-- Quick Contact Cards -->
        <div class="contact-info-cards">
          <div class="info-card">
            <div class="icon-wrapper phone-icon">
              <i class="fas fa-phone-alt"></i>
            </div>
            <div class="info-content">
              <h4>Call Us</h4>
              <p>24/7 Support Available</p>
              <a href="tel:+911800123456" class="contact-link">+91 1800-123-4567</a>
              <a href="tel:+919876543210" class="contact-link">+91 98765-43210</a>
            </div>
          </div>

          <div class="info-card">
            <div class="icon-wrapper email-icon">
              <i class="fas fa-envelope"></i>
            </div>
            <div class="info-content">
              <h4>Email Us</h4>
              <p>We'll respond within 24 hours</p>
              <a href="mailto:info@hospitalcare.com" class="contact-link">info@hospitalcare.com</a>
              <a href="mailto:support@hospitalcare.com" class="contact-link">support@hospitalcare.com</a>
            </div>
          </div>

          <div class="info-card">
            <div class="icon-wrapper location-icon">
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="info-content">
              <h4>Visit Us</h4>
              <p>Our main hospital location</p>
              <address>
                Punsia Basti, Banka,<br>
                Bihar, India - 813102
              </address>
            </div>
          </div>

          <div class="info-card">
            <div class="icon-wrapper time-icon">
              <i class="fas fa-clock"></i>
            </div>
            <div class="info-content">
              <h4>Working Hours</h4>
              <p class="mb-1"><strong>Emergency:</strong> 24/7</p>
              <p class="mb-1"><strong>OPD:</strong> Mon-Sat, 8 AM - 8 PM</p>
              <p class="mb-0"><strong>Sunday:</strong> 9 AM - 2 PM</p>
            </div>
          </div>
        </div>

        <!-- Emergency Alert -->
        <div class="emergency-card">
          <div class="emergency-icon">
            <i class="fas fa-ambulance"></i>
          </div>
          <div class="emergency-content">
            <h4>Medical Emergency?</h4>
            <p>For immediate assistance, call our emergency hotline</p>
            <a href="tel:112" class="emergency-btn">
              <i class="fas fa-phone-volume"></i> Call 112
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Map Section -->
    <div class="map-section">
      <h2 class="text-center mb-4"><i class="fas fa-map-marked-alt"></i> Find Us on Map</h2>
      <div class="map-container">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d57730.89447106911!2d86.8568!3d24.8811!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39f1c0c5c5c5c5c5%3A0x5c5c5c5c5c5c5c5c!2sBanka%2C%20Bihar!5e0!3m2!1sen!2sin!4v1234567890" 
          width="100%" 
          height="450" 
          style="border:0; border-radius: 15px;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>

    <!-- FAQ Section -->
    <div class="faq-section">
      <h2 class="text-center mb-4"><i class="fas fa-question-circle"></i> Frequently Asked Questions</h2>
      <div class="row">
        <div class="col-md-6">
          <div class="faq-item">
            <h5><i class="fas fa-chevron-right"></i> How do I book an appointment?</h5>
            <p>You can book an appointment online through our website or call our helpline at +91 1800-123-4567.</p>
          </div>
          <div class="faq-item">
            <h5><i class="fas fa-chevron-right"></i> Do you accept health insurance?</h5>
            <p>Yes, we accept most major health insurance plans. Please contact us with your insurance details.</p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="faq-item">
            <h5><i class="fas fa-chevron-right"></i> What are your visiting hours?</h5>
            <p>Visiting hours are 4 PM - 7 PM daily. Emergency visits are allowed 24/7.</p>
          </div>
          <div class="faq-item">
            <h5><i class="fas fa-chevron-right"></i> Do you provide ambulance services?</h5>
            <p>Yes, we have 24/7 ambulance services. Call 112 or +91 1800-123-4567 for emergency pickup.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
