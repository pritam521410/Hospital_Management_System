<%- layout('layouts/boilerplate') %>

<style>
  .medicines-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 80px 0;
    margin-bottom: 50px;
    border-radius: 0 0 50px 50px;
    box-shadow: 0 20px 60px rgba(102, 126, 234, 0.3);
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
    text-align: center;
    color: white;
    margin-bottom: 20px;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    text-align: center;
    color: white;
    opacity: 0.95;
  }

  .medicine-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    height: 100%;
  }

  .medicine-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 60px rgba(102, 126, 234, 0.3);
    border: 2px solid #667eea30;
  }

  .medicine-img {
    width: 100%;
    height: 250px;
    object-fit: contain;
    border-radius: 20px 20px 0 0;
    padding: 20px;
    background: #fafafa;
  }

  .medicine-body {
    padding: 25px;
  }

  .medicine-name {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 15px;
  }

  .price-tag {
    font-size: 1.8rem;
    font-weight: 800;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 15px 0;
  }

  .button-group {
    display: flex;
    gap: 10px;
    margin-top: 15px;
  }

  .cart-btn {
    flex: 1;
    padding: 12px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .cart-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
  }

  .buy-btn {
    flex: 1;
    padding: 12px;
    background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .buy-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(67, 233, 123, 0.4);
  }

  .edit-btn {
    flex: 1;
    padding: 10px;
    background: #ffc107;
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-size: 0.9rem;
  }

  .edit-btn:hover {
    color: white;
    background: #ffb300;
    transform: translateY(-2px);
  }

  .delete-btn {
    flex: 1;
    padding: 10px;
    background: #dc3545;
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-size: 0.9rem;
  }

  .delete-btn:hover {
    background: #c82333;
    transform: translateY(-2px);
  }

  .quantity-selector {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    margin: 15px 0;
  }

  .qty-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
    border: 2px solid #667eea;
    color: #667eea;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .qty-btn:hover {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    transform: scale(1.1);
  }

  .qty-value {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2d3748;
    min-width: 40px;
    text-align: center;
  }

  .toast-notification {
    position: fixed;
    top: 100px;
    right: 30px;
    padding: 15px 25px;
    background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    color: white;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    font-weight: 600;
    z-index: 9999;
    display: flex;
    align-items: center;
    gap: 10px;
    animation: slideIn 0.3s ease;
  }

  @keyframes slideIn {
    from {
      transform: translateX(400px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideOut {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(400px);
      opacity: 0;
    }
  }
</style>

<body>
  <div class="medicines-hero">
    <div class="container">
      <h1 class="hero-title">
        <i class="fas fa-pills me-3"></i>
        Buy Medicines Online
      </h1>
      <p class="hero-subtitle">
        Order quality medicines from trusted manufacturers
      </p>
    </div>
  </div>

  <div class="container mb-5">
    <% if (allMedicines.length === 0) { %>
      <div class="text-center py-5">
        <i
          class="fas fa-pills"
          style="font-size: 5rem; color: #cbd5e0; margin-bottom: 20px"
        ></i>
        <h3>No Medicines Available</h3>
        <p class="text-muted">Click on "Add Medicine" in the navigation menu to add medicines!</p>
      </div>
    <% } else { %>
    <div class="row g-4">
      <% allMedicines.forEach(function(medicine) { %>
      <div class="col-lg-4 col-md-6">
        <div class="medicine-card" onclick="window.location.href='/medicines/<%= medicine._id %>'" style="cursor: pointer;">
          <img
            src="<%= medicine.image.url %>"
            class="medicine-img"
            alt="<%= medicine.name %>"
          />
          <div class="medicine-body">
            <h3 class="medicine-name"><%= medicine.name %></h3>
            <p><strong>Uses:</strong> <%= medicine.uses %></p>
            <p><strong>Manufacturer:</strong> <%= medicine.manufacturer %></p>
            <div class="price-tag">Rs <%= medicine.price %></div>

            <div class="quantity-selector" onclick="event.stopPropagation()">
              <button
                class="qty-btn"
                onclick="decreaseQty('<%= medicine._id %>')"
              >
                <i class="fas fa-minus"></i>
              </button>
              <span class="qty-value" id="qty-<%= medicine._id %>">1</span>
              <button
                class="qty-btn"
                onclick="increaseQty('<%= medicine._id %>')"
              >
                <i class="fas fa-plus"></i>
              </button>
            </div>

            <!-- Add to Cart & Buy Now Buttons (Always Show) -->
            <div class="button-group" onclick="event.stopPropagation()">
              <button
                class="cart-btn"
                data-id="<%= medicine._id %>"
                data-name="<%= medicine.name %>"
                data-price="<%= medicine.price %>"
                onclick="addToCart(this.dataset.id, this.dataset.name, this.dataset.price)"
              >
                <i class="fas fa-shopping-cart me-2"></i>Add to Cart
              </button>
              <button
                class="buy-btn"
                data-id="<%= medicine._id %>"
                data-name="<%= medicine.name %>"
                data-price="<%= medicine.price %>"
                onclick="buyNow(this.dataset.id, this.dataset.name, this.dataset.price)"
              >
                <i class="fas fa-bolt me-2"></i>Buy Now
              </button>
            </div>

            <!-- Owner Controls (if owner) -->
            <% if (currentUser && medicine.owner &&
            medicine.owner.equals(currentUser._id)) { %>
            <div class="button-group mt-2" onclick="event.stopPropagation()">
              <a href="/medicines/<%= medicine._id %>/edit" class="edit-btn" onclick="event.stopPropagation()">
                <i class="fas fa-edit me-2"></i>Edit
              </a>
              <form
                method="POST"
                action="/medicines/<%= medicine._id %>?_method=DELETE"
                style="flex: 1; margin: 0"
                onsubmit="event.stopPropagation(); return confirm('Are you sure you want to delete this medicine?')"
              >
                <button class="delete-btn" style="width: 100%" type="submit">
                  <i class="fas fa-trash me-2"></i>Delete
                </button>
              </form>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>

  <script>
    let cart = JSON.parse(localStorage.getItem("medicineCart")) || [];
    const quantities = {};

    function increaseQty(id) {
      const qtyElement = document.getElementById("qty-" + id);
      let currentQty = parseInt(qtyElement.textContent);
      if (currentQty < 10) {
        qtyElement.textContent = currentQty + 1;
        quantities[id] = currentQty + 1;
      }
    }

    function decreaseQty(id) {
      const qtyElement = document.getElementById("qty-" + id);
      let currentQty = parseInt(qtyElement.textContent);
      if (currentQty > 1) {
        qtyElement.textContent = currentQty - 1;
        quantities[id] = currentQty - 1;
      }
    }

    function addToCart(id, name, price) {
      const quantity = quantities[id] || 1;

      const existingIndex = cart.findIndex((item) => item.id === id);

      if (existingIndex !== -1) {
        cart[existingIndex].quantity += quantity;
      } else {
        cart.push({ id: id, name: name, price: price, quantity: quantity });
      }

      localStorage.setItem("medicineCart", JSON.stringify(cart));
      updateCartBadge();

      document.getElementById("qty-" + id).textContent = "1";
      quantities[id] = 1;

      showToast(name + " added to cart!");
    }

    function showToast(message) {
      const toast = document.createElement("div");
      toast.className = "toast-notification";
      toast.innerHTML =
        '<i class="fas fa-check-circle"></i><span>' + message + "</span>";
      document.body.appendChild(toast);

      setTimeout(function () {
        toast.style.animation = "slideOut 0.3s ease";
        setTimeout(function () {
          toast.remove();
        }, 300);
      }, 2000);
    }

    function buyNow(id, name, price) {
      const quantity = quantities[id] || 1;
      const total = price * quantity;
      createOrder(name, total);
    }

    function updateCartBadge() {
      const badge = document.getElementById("cartCount");
      if (badge) {
        const total = cart.reduce((sum, item) => sum + item.quantity, 0);
        badge.textContent = total;
        badge.style.display = total > 0 ? "flex" : "none";
      }
    }

    async function createOrder(name, price) {
      try {
        const response = await fetch("/create-order", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ amount: price }),
        });

        const order = await response.json();

        const options = {
          key: order.rzrpay_key,
          amount: order.amount,
          currency: "INR",
          name: "HospitalCare Pharmacy",
          description: name,
          order_id: order.orderId,
          handler: function (response) {
            alert("Payment Successful! Order will be delivered in 2-3 days.");
          },
          theme: { color: "#667eea" },
        };

        const rzp = new Razorpay(options);
        rzp.open();
      } catch (error) {
        alert("Error: " + error.message);
      }
    }

    updateCartBadge();
  </script>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</body>
