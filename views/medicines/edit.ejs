<% layout("/layouts/boilerplate") -%>

<div class="add-medicine-page">
  <div class="container" style="max-width: 850px; margin: 40px auto; padding: 0 20px;">
    <div class="form-card">
      <div class="form-header">
        <h2>Edit Medicine</h2>
        <p>Update medicine details</p>
      </div>

      <div class="form-body">
        <form action="/medicines/<%= medicine._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
          
          <!-- Medicine Name -->
          <div class="form-field">
            <label for="name">Medicine Name <span class="required">*</span></label>
            <input 
              type="text" 
              class="input-field input-lg" 
              id="name" 
              name="medicine[name]" 
              value="<%= medicine.name %>"
              required 
            />
          </div>

          <div class="row">
            <!-- Manufacturer -->
            <div class="col-md-6">
              <div class="form-field">
                <label for="manufacturer">Manufacturer <span class="required">*</span></label>
                <input 
                  type="text" 
                  class="input-field" 
                  id="manufacturer" 
                  name="medicine[manufacturer]" 
                  value="<%= medicine.manufacturer %>"
                  required 
                />
              </div>
            </div>

            <!-- Price -->
            <div class="col-md-6">
              <div class="form-field">
                <label for="price">Price (â‚¹) <span class="required">*</span></label>
                <input 
                  type="number" 
                  class="input-field" 
                  id="price" 
                  name="medicine[price]" 
                  value="<%= medicine.price %>"
                  min="0"
                  step="0.01"
                  required 
                />
              </div>
            </div>
          </div>

          <!-- Uses -->
          <div class="form-field">
            <label for="uses">Uses / Indications <span class="required">*</span></label>
            <input 
              type="text" 
              class="input-field" 
              id="uses" 
              name="medicine[uses]" 
              value="<%= medicine.uses %>"
              required 
            />
          </div>

          <!-- Description -->
          <div class="form-field">
            <label for="description">Description</label>
            <textarea 
              class="input-field" 
              id="description" 
              name="medicine[description]" 
              rows="3"
              placeholder="Additional information..."
            ><%= medicine.description || '' %></textarea>
            <small class="helper-text">Optional: Add any additional details</small>
          </div>

          <div class="row">
            <!-- Category -->
            <div class="col-md-6">
              <div class="form-field">
                <label for="category">Category <span class="required">*</span></label>
                <select class="input-field" id="category" name="medicine[category]" required>
                  <option value="Pain Relief" <%= medicine.category === 'Pain Relief' ? 'selected' : '' %>>Pain Relief</option>
                  <option value="Antibiotics" <%= medicine.category === 'Antibiotics' ? 'selected' : '' %>>Antibiotics</option>
                  <option value="Cold & Cough" <%= medicine.category === 'Cold & Cough' ? 'selected' : '' %>>Cold & Cough</option>
                  <option value="Vitamins" <%= medicine.category === 'Vitamins' ? 'selected' : '' %>>Vitamins</option>
                  <option value="General" <%= medicine.category === 'General' ? 'selected' : '' %>>General</option>
                  <option value="Other" <%= medicine.category === 'Other' ? 'selected' : '' %>>Other</option>
                </select>
              </div>
            </div>

            <!-- Dosage -->
            <div class="col-md-6">
              <div class="form-field">
                <label for="dosage">Dosage</label>
                <input 
                  type="text" 
                  class="input-field" 
                  id="dosage" 
                  name="medicine[dosage]" 
                  value="<%= medicine.dosage || '' %>"
                  placeholder="e.g., 500mg, 10ml"
                />
                <small class="helper-text">Optional</small>
              </div>
            </div>
          </div>

          <div class="row">
            <!-- Pack Size -->
            <div class="col-md-6">
              <div class="form-field">
                <label for="packSize">Pack Size</label>
                <input 
                  type="text" 
                  class="input-field" 
                  id="packSize" 
                  name="medicine[packSize]" 
                  value="<%= medicine.packSize || '' %>"
                  placeholder="e.g., Strip of 10 tablets"
                />
                <small class="helper-text">Optional</small>
              </div>
            </div>

            <!-- Stock Quantity -->
            <div class="col-md-6">
              <div class="form-field">
                <label for="stockQuantity">Stock Quantity</label>
                <input 
                  type="number" 
                  class="input-field" 
                  id="stockQuantity" 
                  name="medicine[stockQuantity]" 
                  value="<%= medicine.stockQuantity || 100 %>"
                  min="0"
                />
                <small class="helper-text">Default: 100 units</small>
              </div>
            </div>
          </div>

          <!-- Prescription Required -->
          <div class="form-field">
            <div class="checkbox-wrapper">
              <input 
                type="checkbox" 
                id="prescriptionRequired" 
                name="medicine[prescriptionRequired]"
                <%= medicine.prescriptionRequired ? 'checked' : '' %>
              />
              <label for="prescriptionRequired">
                Prescription Required
              </label>
            </div>
            <small class="helper-text">Check if medicine requires doctor's prescription</small>
          </div>

          <!-- Current Image -->
          <% if (medicine.image && medicine.image.url) { %>
            <div class="form-field">
              <label>Current Image</label>
              <div class="current-image">
                <img src="<%= medicine.image.url %>" alt="<%= medicine.name %>">
              </div>
            </div>
          <% } %>

          <!-- Image Upload -->
          <div class="form-field">
            <label for="image">Update Medicine Image</label>
            <input 
              type="file" 
              class="input-field file-input" 
              id="image" 
              name="medicine[image]" 
              accept="image/*"
            />
            <small class="helper-text">Leave empty to keep current image</small>
          </div>

          <!-- Submit Buttons -->
          <div class="form-actions">
            <a href="/medicines/<%= medicine._id %>" class="btn-cancel">
              Cancel
            </a>
            <button type="submit" class="btn-submit">
              Update Medicine
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict'
    const forms = document.querySelectorAll('.needs-validation')
    Array.from(forms).forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()

  document.getElementById('image').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
      const fileSize = file.size / 1024 / 1024;
      if (fileSize > 5) {
        alert('File size should not exceed 5MB');
        this.value = '';
      }
    }
  });
</script>

<style>
  .add-medicine-page {
    background: #f8f9fa;
    min-height: calc(100vh - 200px);
    padding: 30px 0;
  }

  .form-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 5px 30px rgba(0,0,0,0.1);
    overflow: hidden;
  }

  .form-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 40px;
    text-align: center;
  }

  .form-header h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .form-header p {
    margin-bottom: 0;
    opacity: 0.9;
    font-size: 1.05rem;
  }

  .form-body {
    padding: 50px 60px;
  }

  .form-field {
    margin-bottom: 35px;
  }

  .form-field label {
    display: block;
    color: #2d3748;
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 10px;
  }

  .required {
    color: #dc3545;
    font-weight: 700;
  }

  .input-field {
    width: 100%;
    padding: 14px 18px;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: #f8f9fa;
  }

  .input-lg {
    font-size: 1.15rem;
    padding: 16px 20px;
  }

  .input-field:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
  }

  .input-field::placeholder {
    color: #a0aec0;
  }

  textarea.input-field {
    resize: vertical;
    min-height: 100px;
  }

  select.input-field {
    cursor: pointer;
  }

  .file-input {
    padding: 12px;
    cursor: pointer;
  }

  .helper-text {
    display: block;
    margin-top: 6px;
    color: #718096;
    font-size: 0.875rem;
  }

  .checkbox-wrapper {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .checkbox-wrapper input[type="checkbox"] {
    width: 20px;
    height: 20px;
    cursor: pointer;
    accent-color: #667eea;
  }

  .checkbox-wrapper label {
    margin-bottom: 0;
    cursor: pointer;
    font-weight: 500;
  }

  .current-image {
    padding: 20px;
    background: #f7fafc;
    border-radius: 12px;
    text-align: center;
  }

  .current-image img {
    max-width: 250px;
    max-height: 250px;
    border-radius: 10px;
    border: 2px solid #e2e8f0;
  }

  .form-actions {
    margin-top: 45px;
    padding-top: 30px;
    border-top: 2px solid #f0f0f0;
    display: flex;
    gap: 15px;
    justify-content: flex-end;
  }

  .btn-cancel {
    padding: 14px 35px;
    background: white;
    color: #4a5568;
    border: 2px solid #cbd5e0;
    border-radius: 10px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .btn-cancel:hover {
    background: #f7fafc;
    border-color: #a0aec0;
    color: #2d3748;
  }

  .btn-submit {
    padding: 14px 45px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(102, 126, 234, 0.4);
  }

  .invalid-feedback {
    display: none;
    color: #dc3545;
    font-size: 0.875rem;
    margin-top: 6px;
  }

  .was-validated .input-field:invalid ~ .invalid-feedback {
    display: block;
  }

  .was-validated .input-field:invalid {
    border-color: #dc3545;
  }

  .was-validated .input-field:valid {
    border-color: #38a169;
  }

  @media (max-width: 768px) {
    .form-body {
      padding: 30px 25px;
    }

    .form-header h2 {
      font-size: 1.6rem;
    }

    .form-actions {
      flex-direction: column;
    }

    .btn-cancel,
    .btn-submit {
      width: 100%;
      text-align: center;
    }
  }
</style>
