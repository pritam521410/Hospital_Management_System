<%- layout('layouts/boilerplate') %>

<style>
  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  }

  .bookings-container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 10px;
  }

  .page-subtitle {
    color: #718096;
    font-size: 1.1rem;
  }

  .booking-card {
    background: white;
    border-radius: 20px;
    padding: 30px;
    margin-bottom: 25px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .booking-card::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 5px;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .booking-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 50px rgba(102, 126, 234, 0.2);
  }

  .booking-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 25px;
    padding-bottom: 20px;
    border-bottom: 2px solid #f7fafc;
  }

  .hospital-info h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 8px;
  }

  .hospital-location {
    color: #718096;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .status-badges {
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: flex-end;
  }

  .status-badge {
    padding: 6px 15px;
    border-radius: 50px;
    font-weight: 700;
    font-size: 0.85rem;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .status-confirmed {
    background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    color: white;
  }

  .status-completed {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .status-cancelled {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: white;
  }

  .payment-completed {
    background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    color: white;
  }

  .payment-pending {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    color: white;
  }

  .booking-details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
  }

  .detail-item {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .detail-label {
    color: #718096;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .detail-value {
    color: #2d3748;
    font-size: 1rem;
    font-weight: 700;
  }

  .booking-actions {
    display: flex;
    gap: 12px;
    margin-top: 20px;
    padding-top: 20px;
    border-top: 2px solid #f7fafc;
  }

  .action-btn {
    padding: 10px 20px;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
  }

  .view-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .view-btn:hover {
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
  }

  .empty-icon {
    font-size: 5rem;
    color: #cbd5e0;
    margin-bottom: 25px;
  }

  .empty-title {
    font-size: 2rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 15px;
  }

  .empty-message {
    color: #718096;
    font-size: 1.1rem;
    margin-bottom: 30px;
  }

  .browse-btn {
    padding: 15px 40px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
  }

  .browse-btn:hover {
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2.2rem;
    }

    .booking-header {
      flex-direction: column;
      gap: 15px;
    }

    .status-badges {
      align-items: flex-start;
    }

    .booking-details-grid {
      grid-template-columns: 1fr;
    }

    .booking-actions {
      flex-direction: column;
    }

    .action-btn {
      justify-content: center;
    }
  }
</style>

<body>
  <div class="bookings-container">
    <div class="page-header">
      <h1 class="page-title">
        <i class="fas fa-calendar-alt me-3"></i>
        My Bookings
      </h1>
      <p class="page-subtitle">View and manage all your hospital room bookings</p>
    </div>

    <% if (bookings.length === 0) { %>
      <div class="empty-state">
        <i class="fas fa-calendar-times empty-icon"></i>
        <h2 class="empty-title">No Bookings Yet</h2>
        <p class="empty-message">
          You haven't made any bookings yet. Browse hospitals and book your room now!
        </p>
        <a href="/rooms" class="browse-btn">
          <i class="fas fa-search"></i>
          Browse Rooms
        </a>
      </div>
    <% } else { %>
      <% bookings.forEach(function(booking) { %>
        <div class="booking-card">
          <div class="booking-header">
            <div class="hospital-info">
              <h3>
                <i class="fas fa-hospital me-2" style="color: #667eea;"></i>
                <% if (booking.hospital) { %>
                  <%= booking.hospital.name %>
                <% } else { %>
                  <span style="color: #e53e3e;">Hospital Not Available</span>
                <% } %>
              </h3>
              <div class="hospital-location">
                <i class="fas fa-map-marker-alt"></i>
                <% if (booking.hospital) { %>
                  <%= booking.hospital.location %>, <%= booking.hospital.city %>
                <% } else { %>
                  <span style="color: #718096;">This hospital has been removed</span>
                <% } %>
              </div>
            </div>
            <div class="status-badges">
              <span class="status-badge status-<%= booking.bookingStatus.toLowerCase() %>">
                <i class="fas fa-<%= booking.bookingStatus === 'Confirmed' ? 'check-circle' : booking.bookingStatus === 'Completed' ? 'calendar-check' : 'times-circle' %>"></i>
                <%= booking.bookingStatus %>
              </span>
              <span class="status-badge payment-<%= booking.paymentStatus.toLowerCase() %>">
                <i class="fas fa-<%= booking.paymentStatus === 'Completed' ? 'check-circle' : 'clock' %>"></i>
                <%= booking.paymentStatus %>
              </span>
            </div>
          </div>

          <div class="booking-details-grid">
            <div class="detail-item">
              <span class="detail-label">
                <i class="fas fa-id-card me-1"></i>
                Booking ID
              </span>
              <span class="detail-value" style="font-family: 'Courier New', monospace; font-size: 0.85rem;">
                <%= booking._id.toString().substring(0, 12) %>...
              </span>
            </div>

            <div class="detail-item">
              <span class="detail-label">
                <i class="fas fa-bed me-1"></i>
                Room Type
              </span>
              <span class="detail-value"><%= booking.roomType %></span>
            </div>

            <div class="detail-item">
              <span class="detail-label">
                <i class="fas fa-user-injured me-1"></i>
                Patient Name
              </span>
              <span class="detail-value"><%= booking.patientName %></span>
            </div>

            <div class="detail-item">
              <span class="detail-label">
                <i class="fas fa-calendar-check me-1"></i>
                Check-in
              </span>
              <span class="detail-value">
                <%= new Date(booking.checkInDate).toLocaleDateString('en-IN') %>
              </span>
            </div>

            <div class="detail-item">
              <span class="detail-label">
                <i class="fas fa-calendar-times me-1"></i>
                Check-out
              </span>
              <span class="detail-value">
                <%= new Date(booking.checkOutDate).toLocaleDateString('en-IN') %>
              </span>
            </div>

            <div class="detail-item">
              <span class="detail-label">
                <i class="fas fa-clock me-1"></i>
                Duration
              </span>
              <span class="detail-value"><%= booking.numberOfDays %> days</span>
            </div>

            <div class="detail-item">
              <span class="detail-label">
                <i class="fas fa-rupee-sign me-1"></i>
                Total Amount
              </span>
              <span class="detail-value" style="color: #43e97b;">
                â‚¹<%= booking.totalAmount %>
              </span>
            </div>

            <div class="detail-item">
              <span class="detail-label">
                <i class="fas fa-calendar-plus me-1"></i>
                Booked On
              </span>
              <span class="detail-value" style="font-size: 0.9rem;">
                <%= new Date(booking.createdAt).toLocaleDateString('en-IN') %>
              </span>
            </div>
          </div>

          <div class="booking-actions">
            <a href="/bookings/<%= booking._id %>/confirmation" class="action-btn view-btn">
              <i class="fas fa-eye"></i>
              View Details
            </a>
            <% if (booking.hospital) { %>
              <a href="/listings/<%= booking.hospital._id %>" class="action-btn view-btn" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                <i class="fas fa-hospital"></i>
                View Hospital
              </a>
            <% } else { %>
              <button class="action-btn view-btn" disabled style="background: #cbd5e0; cursor: not-allowed;">
                <i class="fas fa-hospital"></i>
                Hospital Unavailable
              </button>
            <% } %>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>

